@model Power.Models.Tags
@{ 
    ViewBag.Title = "新建标签";
    Layout = "~/Pages/_Layout.cshtml";
}

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script type="text/javascript">
    $(function () {
        // 在键盘按下并释放及提交后验证提交表单
        $("#tagForm").validate();
    });
</script>

<br/>
<div class="row">
    <div class="col-md-4">
        <form id="tagForm" action="/Tags/Create" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tag名称</label>
                <input asp-for="Name" name="Name" class="form-control" data-val="true" 
                       data-val-required="名称不能为空！" 
                       data-val-length-max="12" data-val-length-min="2" data-val-length="长度为2-16"/>
                <span class="text-danger"
                       data-valmsg-for="Name" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remark" class="control-label">备注/说明</label>
                <input asp-for="Remark" name="Remark" class="form-control" data-val="true" 
                       data-val-length-max="12" data-val-length-min="2" data-val-length="长度为2-16" />
                <span  data-valmsg-for="Remark" data-valmsg-replace="true" class="text-danger"></span>
            </div>
      
   
       
            <div class="form-group">
                <input type="submit" id="btnSubmit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

